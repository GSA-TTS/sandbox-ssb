# Credentials for clients of the broker's API
# Provided during registration of the broker with cloud.gov or k8s
api:
  user: ${client_username}
  password: ${client_password}

# Credentials for the MySQL database where the broker stores its state
db:
  host: ${db_host}
  user: ${db_user}
  password: ${db_password}
  port: ${db_port}
  name: ${db_name}

# Credentials for managing resoures in AWS
aws:
  access_key_id: ${aws_access_key_id}
  secret_access_key: ${aws_secret_access_key}

